    ee.Geometry.MultiPolygon(
        [[[[42.30667439013271, -2.264194671054589],
           [42.30667439013271, -27.04098225287308],
           [66.74026814013271, -27.04098225287308],
           [66.74026814013271, -2.264194671054589]]],
         [[[-9.812466234867285, -13.177329702571445],
           [-9.812466234867285, -13.177329702571445],
           [-9.812466234867285, -13.177329702571445],
           [-9.812466234867285, -13.177329702571445]]]], null, false);
