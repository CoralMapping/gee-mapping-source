var map_centre = /* color: #d63000 */ee.Geometry.Point([50.26077595263271, -9.927142570159555]),
    global_mask = ee.Image("users/murrnick/global-reefs/reefOut/reefMask_gebco_1k"),
    manual_mask_additions = 
    /* color: #d63000 */
    /* shown: false */
    ee.FeatureCollection([]),
    not_reef = /* color: #ff2705 */ee.Geometry.Polygon(
        [[[-159.57441353482778, 21.899198848683866],
          [-159.5812799899059, 21.883907672452633],
          [-159.52772164029653, 21.874987062523306],
          [-159.52428841275747, 21.890279195163462]]]),
    wcmc = ee.FeatureCollection("projects/coral_atlas/global_datasets/wcmc_reefs_2018v4_dissolved"),
    wio_extent = 
    /* color: #d63000 */
    /* shown: false */
    /* displayProperties: [
      {
        "type": "rectangle"
