    value: ee.Image(13)
  });
  */
    // Reef crest, (within reef mask) -> outer reef flat
  man_geo = man_geo.where({
    test: reef_mask.eq(0)
                    .and(man_geo.eq(15)),
    value: ee.Image(14)
  });
  
 /* 
  var distToLand = ee.Image(region_params.distToLand);
  
