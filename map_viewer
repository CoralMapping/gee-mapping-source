var Cairns = /* color: #d63000 */ee.Geometry.Point([145.80785085646403, -16.343697740921982]),
    Capricorn = /* color: #98ff00 */ee.Geometry.Point([151.913537635627, -23.452680584823657]),
    waves_c2c = ee.Image("users/danleeharris/gbr_waves/C2C_v2"),
    gbr_sentinel = ee.Image("users/mitchest/gbr_reefs/gbr_sentinel2x"),
    gbr_geo_map30 = ee.Image("users/mitchest/gbr_reefs/gbr_geo_map30"),
    gbr_s2_geo = ee.Image("users/mitchest/gbr_reefs/gbr_s2_geo"),
    gbr_s2_benthic = ee.Image("users/mitchest/gbr_reefs/gbr_s2_benthic"),
    cancook_dove_htv2_geo = ee.Image("users/mitchest/gbr_reefs/cancook_dove_htv2_geo"),
    cancook_dove_ltv2_geo = ee.Image("users/mitchest/gbr_reefs/cancook_dove_ltv2_geo"),
    cancook_dove_ht_pixels = ee.Image("users/mitchest/gbr_reefs/cancook_dove_htv2_pixels"),
    cancook_dove_ht_segmentation = ee.Image("users/mitchest/gbr_reefs/cancook_dove_htv2_segmentation"),
    cancook_dove_htv2_benthic = ee.Image("users/mitchest/gbr_reefs/cancook_dove_htv2_benthic"),
    cancook_dove_ltv2_benthic = ee.Image("users/mitchest/gbr_reefs/cancook_dove_ltv2_benthic"),
    cancook_dove_htv2_geo_clean = ee.Image("users/mitchest/gbr_reefs/cancook_dove_htv2_geo-clean"),
    cancook_dove_htv2_geo_clean2 = ee.Image("users/mitchest/gbr_reefs/cancook_dove_htv2_geo-clean2"),
    cancook_dove_ltv2_geo_clean = ee.Image("users/mitchest/gbr_reefs/cancook_dove_ltv2_geo-clean"),
    depth_pal = {"opacity":1,"bands":["depth"],"max":5,"palette":["e4e1ff","7f89ff","3a52ff","0007ff","000258"]},
    cancook_dove_geo_nd50 = ee.Image("users/mitchest/gbr_reefs/cancook_dove_geo-nd50");
/***** End of imports. If edited, may not auto-convert in the playground. *****/
// little viewing script for looking at reefs across different regions

// imports
var pkg_vis = require('users/mitchest/global_reefs:Modules/pkg_vis')
var map_palettes = require('users/mitchest/global_reefs:Modules/colour_pals')

// choose where to centre (link this dynamically to map app?)
var centre_map = Cairns
Map.centerObject(centre_map, 11)

// add some background data
Map.addLayer(gbr_sentinel, {bands: ['B4','B3','B2'], min: 360, max: 2000}, "Sentinel-2 mosaic", false)
Map.addLayer(cancook_dove_ht_pixels, {bands: ['b3','b2','b1'], min: 66, max: 1260}, "Dove H-tide pixel mosaic", false)
Map.addLayer(cancook_dove_ht_pixels.select('depth'), depth_pal, "Dove H-tide depth moasic", false)
Map.addLayer(cancook_dove_ht_segmentation, {bands: ['b3','b2','b1'], min: 66, max: 1380}, "Dove H-tide segmentation mosaic", false)
Map.addLayer(waves_c2c, {bands: ['b1'], min: -0.05, max: 1.8}, "C2C wave data from Dove data", false)


// add the map data layers
// GBR
Map.addLayer(gbr_geo_map30.selfMask(), map_palettes.geo, "Sentinel-2 GBR geo (Cancook + CBG trained)", false)
Map.addLayer(gbr_s2_geo.selfMask(), map_palettes.geo, "Sentinel-2 GBR geo (Cancook trained)", false)
Map.addLayer(gbr_s2_benthic.selfMask(), map_palettes.benthic, "Sentinel-2 GBR benthic (Cancook trained)", false)
//Carins to Cooktown
Map.addLayer(cancook_dove_htv2_geo.selfMask(), map_palettes.geo, "Dove Carins-Cook Geo - raw H-tide", false)
Map.addLayer(cancook_dove_htv2_geo_clean.selfMask(), map_palettes.geo, "Dove Carins-Cook Geo - clean H-tide", false)
Map.addLayer(cancook_dove_htv2_geo_clean2.selfMask(), map_palettes.geo, "Dove Carins-Cook Geo - clean2 H-tide", false)
Map.addLayer(cancook_dove_ltv2_geo.selfMask(), map_palettes.geo, "Dove Carins-Cook Geo - raw L-tide", false)
Map.addLayer(cancook_dove_ltv2_geo_clean.selfMask(), map_palettes.geo, "Dove Carins-Cook Geo - clean L-tide", false)
Map.addLayer(cancook_dove_geo_nd50.selfMask(), map_palettes.geo, "Dove Carins-Cook Geo - no depth", false)
Map.addLayer(cancook_dove_htv2_benthic.selfMask(), map_palettes.benthic, "Dove Carins-Cook Benthic - raw H-tide", false)
Map.addLayer(cancook_dove_ltv2_benthic.selfMask(), map_palettes.benthic, "Dove Carins-Cook Benthic - raw L-tide", false)


// add training point distributions
// ----> possibly - points are only intermediate in the mapping script, so will have to pull those out if we want that



////////// UI SET UP //////////

//Generate title
var title = ui.Label({
  value: 'Prototype Coral Atlas mapping algorithms',
  style: {fontWeight: 'bold', fontSize: '18px'}
})

// generate the legend
var geo_legend = pkg_vis.discrete_legend(map_palettes.geo_names, map_palettes.geo_cols, 'Geomorphic Zone', false)
var benthic_legend = pkg_vis.discrete_legend(map_palettes.benthic_names, map_palettes.benthic_cols, 'Benthic Habitat', false)
pkg_vis.add_lgds([title, geo_legend, benthic_legend])
// generate the legend




